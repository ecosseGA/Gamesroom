.gamesroom-gameMetaIcon {
    margin-left: 0.5rem;
}


/* Game Play Page
   ========================================== */

.gamesroom-playHeader {
    margin-bottom: 1rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 4px;
}

.gamesroom-playTitle {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
}

.gamesroom-playMeta {
    display: flex;
    gap: 1rem;
    align-items: center;
    font-size: 0.875rem;
    color: #666;
